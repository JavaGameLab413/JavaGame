<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/loginBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/yellow_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yellow_card"
        app:tint="#80F0E68C" />

    <ImageView
        android:id="@+id/loginFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="@+id/loginBackground"
        app:layout_constraintStart_toStartOf="@+id/loginBackground"
        app:layout_constraintTop_toTopOf="@+id/loginBackground"
        app:srcCompat="@drawable/login_frame" />

    <TextView
        android:id="@+id/loginView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="132dp"
        android:textSize="30sp"
        android:text="登入遊戲"
        android:textColor="@color/white"
        app:drawableTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/loginFrame"
        app:layout_constraintStart_toStartOf="@+id/loginFrame"
        app:layout_constraintTop_toTopOf="@+id/loginFrame" />

    <TextView
        android:id="@+id/TextAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:text="@string/accountText"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/loginFrame"
        app:layout_constraintTop_toTopOf="@+id/loginFrame" />

    <TextView
        android:id="@+id/TextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:text="密碼 :"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/loginFrame"
        app:layout_constraintTop_toTopOf="@+id/loginFrame" />

    <EditText
        android:id="@+id/InputAccount"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/text_frame"
        android:ems="15"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/loginFrame"
        app:layout_constraintTop_toTopOf="@+id/loginFrame" />

    <EditText
        android:id="@+id/InputPassword"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/text_frame"
        android:ems="15"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/loginFrame"
        app:layout_constraintTop_toTopOf="@+id/loginFrame" />

    <Button
        android:id="@+id/ButtonLogin"
        android:layout_width="318dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="45dp"
        android:layout_weight="1"
        android:text="登入"
        app:backgroundTint="#80000000"
        app:layout_constraintEnd_toEndOf="@+id/loginBackground"
        app:layout_constraintStart_toStartOf="@+id/loginBackground"
        app:layout_constraintTop_toTopOf="@+id/yellow_card" />

    <Button
        android:id="@+id/ButtonAdd"
        android:layout_width="318dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="45dp"
        android:layout_weight="1"
        android:text="註冊"
        app:backgroundTint="#80000000"
        app:layout_constraintEnd_toEndOf="@+id/loginBackground"
        app:layout_constraintStart_toStartOf="@+id/loginBackground"
        app:layout_constraintTop_toTopOf="@+id/loginBackground" />

    <Button
        android:id="@+id/ButtonChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="599dp"
        android:layout_marginEnd="270dp"
        android:layout_weight="1"
        android:text="修改"
        app:layout_constraintEnd_toEndOf="@+id/loginBackground"
        app:layout_constraintStart_toStartOf="@+id/loginBackground"
        app:layout_constraintTop_toTopOf="@+id/loginBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>