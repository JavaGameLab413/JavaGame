<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fight">


    <ImageView
        android:id="@+id/backGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fight"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <include
        layout="@layout/activity_player_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="@string/java"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="319dp"
        android:layout_height="430dp"
        app:layout_constraintBottom_toBottomOf="@+id/backGround"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSection1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFD39B"
                android:textColor="@color/black"
                android:text="@string/type" />

            <Button
                android:id="@+id/buttonSection2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFD39B"
                android:textColor="@color/black"
                android:text="@string/export" />

            <Button
                android:id="@+id/buttonSection3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFD39B"
                android:textColor="@color/black"
                android:text="@string/numberThree" />

            <Button
                android:id="@+id/buttonSection4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#FFD39B"
                android:textColor="@color/black"
                android:text="@string/numberFour" />

            <Button
                android:id="@+id/buttonSection5"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:backgroundTint="#FFD39B"
                android:textColor="@color/black"
                android:text="@string/numberFive" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>